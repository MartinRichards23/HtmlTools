<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Html Tools" 
        Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="23" Margin="6,6,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBlock Text="Url:" VerticalAlignment="Center" />
            <TextBox x:Name="txtUrl" HorizontalAlignment="Left"  Text="https://www.bbc.co.uk/news" TextWrapping="NoWrap"  Width="220" Margin="6,0,0,0"/>
            <Button x:Name="btnGo" Content="Go" Margin="6,0,0,0" Click="BtnGo_Click" />
        </StackPanel>

        <WebBrowser x:Name="webBrowser" Margin="0,6,0,0" />
    </DockPanel>
</Window>
